{
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "outDir": "./lib",
        "lib": [
            "dom",
            "es6"
        ]
    },
    "include": [
        "src/**/*"
    ]
}